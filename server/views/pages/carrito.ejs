    <title>Aplicacion de carga de Productos</title>
  </head>
  <body class="container">
    <div class="bg-light p-5">
      <header class="text-center">
        <h1 class="text-primary font-weight-bold">Aplicacion de Productos - Mi Carrito</h1>
      </header>
      <div class="row pt-5" id="carrito"></div>

      <div class="text-center pb-2">
        <button
          id="buttonAgregar"
          type="submit"
          onclick="confirmCart()"
          class="btn btn-primary"
        >
          Confirmar Carrito
        </button>
        <a href="/">
          <button class="btn btn-primary">Volver al Listado</button>
        </a>
      </div>
    </div>
  </body>
</html>

<script>
  console.log("<%= useremail %>");

  

  const dataCarrito = fetch("/api/carritos/<%= useremail %>")
    .then((res) => res.json())
    .then((carrito) => {
      render(carrito);
    })
    .catch(console.error);

  function render(data) {
    console.log(data)
    const html = data.productos
      .map((elem, index) => {

          return `<div class="col-md-4 pb-5">
      <div class="card" style="width: 15rem;">
        <img style="width: 5rem; height: 5rem;" class="card-img-top mx-auto d-block" src="${elem.product.thumbnail}" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">${elem.product.title}</h5>
          <p><b>ID:</b> ${elem.product.id}</p>
          <p><b>Descripci√≥n:</b> ${elem.product.description}</p>
          <p><b>Precio:</b> ${elem.product.price}</p>
          <p><b>Code:</b> ${elem.product.code}</p>
          <p><b>Stock:</b> ${elem.product.stock}</p>
          <p><b>Cantidad:</b> ${elem.quantity}</p>
          <div class="text-center pb-2">
            <button class="btn btn-primary" onclick="deleteProductCart(${elem.product.id})">Eliminar del Carrito</button>
          </div>
        </div>
      </div>
    </div>`;

      })
      .join(" ");
    document.getElementById("carrito").innerHTML = html;
  }
</script>
